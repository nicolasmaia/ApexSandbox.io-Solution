public void linkParent(Case c1, Case c2) {
    if ((c1 <> null && c2 <> null) && (c1.ContactId <> null && c2.ContactId <> null) && c1.ContactId == c2.ContactId) {
        if (c1.CreatedDate < c2.CreatedDate) {
            c1.ParentId = c2.Id;
        } else if (c1.CreatedDate > c2.CreatedDate) {
            c2.ParentId = c1.Id;
        } else {
            // Handle cases with the same CreatedDate, e.g., set one as the parent of the other.
            // You might need to adjust this logic based on your requirements.
            c1.ParentId = c2.Id;
        }
    }
}