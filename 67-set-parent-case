public void linkParent(Case c1, Case c2) {
    if (c1 != null && c2 != null && c1.ContactId != null && c2.ContactId != null &&
        c1.ContactId == c2.ContactId) {
        
        DateTime c1CreatedDate = DateTime.valueOf(c1.CreatedDate);
        DateTime c2CreatedDate = DateTime.valueOf(c2.CreatedDate);

        if (c1CreatedDate < c2CreatedDate) {
            c1.ParentId = c2.Id;
        } else if (c1CreatedDate > c2CreatedDate) {
            c2.ParentId = c1.Id;
        }
    }
}
