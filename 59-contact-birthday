public Boolean isBirthday(Contact c) {


    Integer birthdateMonth = c.Birthdate.month();
    Integer birthdateDay = c.Birthdate.day();
    Integer thisMonth = System.today().month(); 
    Integer thisDay = System.today().day(); 

    if(c.Birthdate == System.today()){
        return true;
    }
    else if(birthdateMonth == thisMonth && birthdateDay == thisDay){
        return true;
    }
    else{
        return false;
    }

}